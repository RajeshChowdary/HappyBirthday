<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".MainActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/rajesh"/>

    <TextView
        android:textSize="36sp" android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:text="Happy Birthday, Chowdary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <TextView android:textSize="36sp"
        android:padding="20dp"
        android:text="From, Rajesh" android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"


        />



</RelativeLayout>
